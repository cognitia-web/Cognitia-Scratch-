// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  age           Int
  password      String?   // Hashed password for credentials auth
  role          UserRole  @default(STUDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Guardian relationship
  guardianId    String?
  guardian      Guardian? @relation("GuardianStudent", fields: [guardianId], references: [id])
  
  // Related data
  tasks         Task[]
  habits        Habit[]
  studySessions StudySession[]
  workouts      Workout[]
  courseProgress CourseProgress[]
  rewards       Reward[]
  videos        Video[]
  exams         Exam[]
  flashcards    Flashcard[]
  reports       DailyReport[]
  foodLogs      FoodLog[]
  
  // Auth
  accounts      Account[]
  sessions      Session[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Guardian {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  phone         String?
  otpCode       String?
  otpExpires    DateTime?
  linkedAt      DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  students      User[]   @relation("GuardianStudent")
  reports       DailyReport[]
  accessLogs    AccessLog[]
  
  @@map("guardians")
}

model Task {
  id            String      @id @default(cuid())
  userId        String
  title         String
  description   String?
  type          TaskType
  priority      Priority    @default(MEDIUM)
  status        TaskStatus  @default(PENDING)
  dueDate       DateTime?
  order         Int         @default(0)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  completedAt   DateTime?
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  verifications Verification[]
  
  @@map("tasks")
}

model Habit {
  id            String   @id @default(cuid())
  userId        String
  name          String
  description   String?
  streak        Int      @default(0)
  longestStreak Int      @default(0)
  lastCompleted DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  completions   HabitCompletion[]
  
  @@map("habits")
}

model HabitCompletion {
  id        String   @id @default(cuid())
  habitId   String
  date      DateTime @default(now())
  verified  Boolean  @default(false)
  
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  
  @@unique([habitId, date])
  @@map("habit_completions")
}

model Verification {
  id            String   @id @default(cuid())
  taskId        String?
  videoId       String?
  type          VerificationType
  status        VerificationStatus @default(PENDING)
  poseData      Json?    // MediaPipe pose landmarks
  videoHash     String?  // SHA-256 hash for duplicate detection
  livenessPrompt String?
  createdAt     DateTime @default(now())
  verifiedAt    DateTime?
  
  task          Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  video         Video?   @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  @@map("verifications")
}

model Video {
  id            String   @id @default(cuid())
  userId        String
  filename      String
  encryptedPath String   // Encrypted file path
  hash          String   // SHA-256 hash
  duration      Int      // Duration in seconds (max 30)
  size          Int      // File size in bytes
  encryptionKey String   // KMS key reference
  createdAt     DateTime @default(now())
  expiresAt     DateTime // Auto-delete after 30 days
  deletedAt     DateTime?
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  verifications Verification[]
  
  @@map("videos")
}

model StudySession {
  id          String   @id @default(cuid())
  userId      String
  duration    Int      // Duration in minutes
  subject     String?
  notes       String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("study_sessions")
}

model Exam {
  id          String   @id @default(cuid())
  userId      String
  title       String
  subject     String
  date        DateTime
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("exams")
}

model Flashcard {
  id          String   @id @default(cuid())
  userId      String
  front       String
  back        String
  subject     String?
  difficulty  Int      @default(3) // 1-5 scale
  lastReviewed DateTime?
  nextReview  DateTime @default(now())
  reviewCount Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("flashcards")
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    CourseCategory
  thumbnail   String?
  level       CourseLevel @default(BEGINNER)
  duration    Int      // Estimated hours
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  lessons     Lesson[]
  progress    CourseProgress[]
  
  @@map("courses")
}

model Lesson {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  content     String?  @db.Text
  videoUrl    String?
  order       Int
  duration    Int?     // Minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@map("lessons")
}

model CourseProgress {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  progress    Float    @default(0) // 0-100
  completedLessons Int @default(0)
  lastAccessed DateTime @default(now())
  completedAt DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseId])
  @@map("course_progress")
}

model Workout {
  id          String   @id @default(cuid())
  userId      String
  type        String
  duration    Int      // Minutes
  calories    Int?
  exercises   Json?    // Array of exercises with sets/reps
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("workouts")
}

model FoodLog {
  id          String   @id @default(cuid())
  userId      String
  name        String
  calories    Int
  protein     Float?
  carbs       Float?
  fats        Float?
  date        DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("food_logs")
}

model Reward {
  id          String   @id @default(cuid())
  userId      String
  points      Int
  type        RewardType
  status      RewardStatus @default(PENDING)
  amount      Float?   // USD amount if converted
  stripePaymentId String?
  kycRequired Boolean  @default(false)
  kycStatus   KYCStatus?
  createdAt   DateTime @default(now())
  processedAt DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("rewards")
}

model DailyReport {
  id          String   @id @default(cuid())
  userId      String?
  guardianId  String?
  date        DateTime @default(now())
  studyTime   Int      // Minutes
  tasksCompleted Int
  streaks     Int
  upcomingExams Json?  // Array of exam info
  note        String?
  sentAt      DateTime?
  
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  guardian    Guardian? @relation(fields: [guardianId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
  @@map("daily_reports")
}

model AccessLog {
  id          String   @id @default(cuid())
  guardianId  String?
  userId      String?
  action      String
  resource    String
  timestamp   DateTime @default(now())
  
  guardian    Guardian? @relation(fields: [guardianId], references: [id], onDelete: Cascade)
  
  @@map("access_logs")
}

enum UserRole {
  STUDENT
  GUARDIAN
  ADMIN
}

enum TaskType {
  STUDY
  WORKOUT
  SKILL
  HABIT
  OTHER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum VerificationType {
  VIDEO
  POSE
  BOTH
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum CourseCategory {
  CODING
  AI
  GUITAR
  DRAWING
  PRODUCTIVITY
  OTHER
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum RewardType {
  POINTS
  USD
  VOUCHER
}

enum RewardStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum KYCStatus {
  NOT_REQUIRED
  PENDING
  APPROVED
  REJECTED
}

